{
  "name": "leafage-libs",
  "description": "leafage libs",
  "repository": "https://github.com/leafage-gk/leafage-libs",
  "author": "tnkgs <kento@kt-one.jp>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{sass,scss}": [
      "stylelint --fix"
    ]
  },
  "scripts": {
    "la-header": "yarn workspace @leafage-libs/la-header",
    "lp-utils": "yarn workspace @leafage-libs/lp-utils",
    "styleguide": "vue-styleguidist server",
    "styleguide:build": "vue-styleguidist build"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@vue/compiler-sfc": "^3.0.0-rc.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "commitlint-config-gitmoji": "^1.0.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rollup": "^2.23.0",
    "rollup-plugin-scss": "^2.5.0",
    "rollup-plugin-vue": "^6.0.0-beta.9",
    "rollup-plugin-vue-inline-svg": "^1.1.1",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "vue": "^2.6.11",
    "vue-loader": "^15.9.3",
    "vue-styleguidist": "^4.28.0",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.43.0"
  }
}
